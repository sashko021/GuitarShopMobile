<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_shape"
        android:layout_marginTop="35dp"
        >
        <ImageView
            android:id="@+id/productImg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/es335"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="es335"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ES-335"
            android:layout_toRightOf="@id/productImg"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:layout_toRightOf="@id/name1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            />
        <Spinner
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_toRightOf="@id/name1"
            android:entries="@array/quantity_string_array"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_toRightOf="@id/spin"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/price"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_remove_shopping_cart_24"
            android:layout_marginLeft="10dp"
            android:contentDescription="removeItem"
            />
    </RelativeLayout>

</RelativeLayout>